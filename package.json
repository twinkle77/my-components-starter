{
  "name": "vue-components",
  "version": "0.1.0",
  "description": "业务组件库",
  "main": "lib/vue-components.common.js",
  "module": "lib/vue-components.umd.min.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "node ./build/buildLib.js",
    "lint": "vue-cli-service lint src packages",
    "test": "vue-cli-service test:unit",
    "build:entry": "node ./build/buildEntry.js",
    "serve": "vue-cli-service serve",
    "// webpack": "导出webpack配置 S",
    "inspect": "vue-cli-service inspect > webpack.config.js",
    "report": "vue-cli-service build --report",
    "// vuepress": "vuepress 生成与启动 S",
    "dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "// release": "版本发布 S",
    "release": "sh build/release.sh",
    "release:major": "standard-version \"--release-as\" \"major\"",
    "release:minor": "standard-version \"--release-as\" \"minor\"",
    "release:patch": "standard-version \"--release-as\" \"patch\"",
    "release:alpha": "standard-version \"--prerelease\" \"alpha\"",
    "// git": "规范commit提交",
    "cz": "git cz"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "core-js": "^2.6.5",
    "shelljs": "^0.8.3",
    "uppercamelcase": "^3.0.0",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.0.0",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "vue-template-compiler": "^2.6.10",
    "vuepress": "^1.1.0"
  },
  "gitHooks": {
    "pre-commit": "yarn run test && lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
